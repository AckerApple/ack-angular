{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "allowJs": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2015", "dom"],
    "paths":{
      "*":["../node_modules/*"]
    }
  },
  "files": [
    "typings.d.ts",
    "src/app.module.ts"
  ],
  "exclude": [
    "node_modules",
    "aot"
  ]
}