mixin top
  .text-center
    br
    a.text-xs(href="#top" pageScroll) top


ng-container("[(htmlWidthModel)]"="screenWidthModel")
route-reporter(
  "[(ref)]"="routeReporter"
  "(beforeChange)"="panelAnim=$event.isBackMode?'slideInLeft':'slideInRight';isBackMode=$event.isBackMode;"
  "(onChange)"="stateName=$event.current.config.name"
)

.font-helvetica.height-full
  ack-fixed-element-stage

  reader-header-body
    reader-header
      .bg-energized.border-grey-3x.border-left-1.border-right-1(id="top")
        .pad.flex-valign-center.flex-wrap
          h1.margin-0
            span.text-sm ðŸš´
            |&nbsp;ack-angular
          span.text-right.flex-1.text-white
            |v{{ version }}

        .flex-wrap.flex-evenly.bg-info.child-pad-sm.text-center.text-2x.strong.child-hover-bg-warning
          a.no-a-style.flex-1.border-right.border-white(
            [ngClass]="{'bg-energized':stateName=='overview'}"
            href="#/overview"
          ) Overview
          a.no-a-style.flex-1.border-right.border-white(
            [ngClass]="{'bg-energized':stateName=='components'}"
            href="#/components"
          ) Components
          a.no-a-style.flex-1.border-right.border-white(
            [ngClass]="{'bg-energized':stateName=='pipes'}"
            href="#/pipes"
          ) Pipes
          //-a.no-a-style.flex-1([ngClass]="{'bg-energized':stateName=='services'}" href="#/services")
            |Services
          a.no-a-style.flex-1(
            [ngClass]="{'bg-energized':stateName=='animations'}"
            href="#/animations"
          ) Animations
          a.no-a-style.flex-1(
            [ngClass]="{'bg-energized':stateName=='providers'}"
            href="#/providers"
          ) Providers    
          a.no-a-style.flex-1(
            [ngClass]="{'bg-energized':stateName=='jjswoz'}"
            href="#/jjswoz"
          ) JJ's WoZ

    reader-body.line-height-2x(style="font-size:16px;")
      fx-tracker(
        "[(fxId)]"       = "fxId"
        "[activatedRoute]" = "routerOutlet.activated ? routerOutlet.activatedRoute : null"
      )

      .height-full.bg-white.border-grey-3x.border-left-1.border-right-1(
        "[ngStyle]"="isSwaping?{'overflow-x':'hidden'}:null"
      )
        .text-left.height-full.pad-top-lg(
          "[ngClass]"             = "screenWidthModel>900?'pad-h-lg':'pad-h-sm'"
          "[@slideInLeftKids]"    = "{value:fxId, params:{time:'500ms'}}"
          "[@absoluteKids]"       = "{value:fxId, params:{time:'500ms'}}"
          "(@absoluteKids.start)" = "inFx=true"
          "(@absoluteKids.done)"  = "inFx=false"
          "[style.max-width.px]"  = "screenWidthModel"
          "[ngStyle]"             = "inFx ? {position:'relative',overflow:'hidden'} : null"
        )
          router-outlet(#routerOutlet="outlet")
          +top