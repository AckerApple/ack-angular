{
  "compilerOptions": {
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "../www",

    "target": "es2015",
    "module": "esnext",
    "importHelpers": true,
    "lib": ["es2018", "dom"]

  },
  "include":[
    "../package.json",
    "./index.ts"
  ],
  "files": [
    "typings.d.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}