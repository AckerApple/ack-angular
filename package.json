{
  "name": "ack-angular",
  "version": "0.2.0",
  "description": "Extra special directives, components, providers and pipes to aide in tackling everyday interface development needs in Angular2",
  "main": "dist/index.js",
  "typings": "index.d.ts",
  "scripts": {
    "install:js": "ack-webpack install github:ackerapple/ack-angular --out js_modules --no-save",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:dist:tsc": "tsc --rootDir . --outDir dist/ --declaration --project ./src/tsconfig.json",
    
    "build:dist": "ngc --declaration --project src",
    
    "ack-webpack": "ack-webpack",
    "build:src:assets": "ack-pug-bundler pugs/ templates/ --oneToOne --outType ts",
    "watch:assets": "npm run build:src:assets -- --watch",

    "compile:prefx": "ack-angular-fx --select absoluteSwap500,200,500 --effects slide,fade --out example/src/prefx.ts",
    "compile:aot": "ngc -p example/tsconfig.aot.json",
    "build:js": "ack-webpack example/index.aot.ts example/www/index.js --production --project tsconfig.json --modules example/js_modules",
    "build": "npm run compile:prefx && npm run compile:aot && npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AckerApple/ack-angular.git"
  },
  "keywords": [
    "ng2",
    "angular2",
    "angular",
    "directives",
    "components",
    "pipes",
    "providers"
  ],
  "author": "Acker Dawn Apple",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AckerApple/ack-angular/issues"
  },
  "homepage": "https://github.com/AckerApple/ack-angular#readme",
  "devDependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/node": "^7.0.11",
    "ack-angular-fx": "^1.1.0",
    "ack-css-boot": "^1.2.27",
    "ack-pug-bundler": "^1.3.0",
    "ack-sass": "^1.0.13",
    "ack-webpack": "^1.1.16",
    "ng2-page-scroll": "^4.0.0-beta.6",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "pug-loader": "^2.3.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.2.0",
    "ts-loader": "^2.0.3",
    "typescript": "^2.2.1",
    "ui-router-ng2": "^1.0.0-beta.4",
    "webpack": "^2.3.2",
    "zone.js": "^0.8.5"
  },
  "jsDependencies": {
    "@angular/router": "^4.0.0",
    "ack-angular-fx": "^1.1.0",
    "ui-router-ng2": "^1.0.0-beta.4",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0"
  }
}