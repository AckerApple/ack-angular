{
  "compilerOptions": {
    "importHelpers": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "../dist",
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2015", "dom"],
    "declaration": true
  },
  "exclude": ["node_modules"]
}