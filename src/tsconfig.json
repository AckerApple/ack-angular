{
  "compilerOptions": {
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "rootDir": ".",
    "outDir": "../dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "declaration": true,
    "stripInternal": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "target": "es2015",
    "module": "esnext",
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "types": ["node"]
  },
  "exclude": [
    "**/node_modules",
    "../node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": false,
    "skipMetadataEmit" : false,
    "skipTemplateCodegen" : true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}