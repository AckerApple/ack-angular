ng-container(*ngFor="let prompt of AckApp.prompts.prompts;let i=index")
  ack-modal-layout("[allowClose]"=0)
    div(style="text-align:left;max-width:900px;border:1px solid #DDD;border-radius:5px;margin:1em;padding:1em;background-color:white;")
      h3(*ngIf="prompt.title" style="margin-top:0;") {{ prompt.title }}
      
      div(style="padding-right:1em;")
        |{{ prompt.message }}
      
      br
      br
      div(style="text-align:right;")
        -btnStyle = "text-align:center;display:inline-block;width:75px;border-radius:3px;border:1px solid #AAA;padding:0 1em;"
        a(
          *ngIf     = "prompt.type=='confirm'"
          "(click)" = "prompt.emitter.emit(false)"
          style     = btnStyle + "margin-right:.5em;"
        ) cancel
        a(
          "(click)" = "prompt.emitter.emit(true)"
          style     = btnStyle
          "[ngStyle]" = "{'font-weight':prompt.type=='confirm' ? 'bold' : null}"
        ) ok


ng-container(*ngFor="let modal of AckApp.modals;let i=index")
  ng-template("[ngTemplateOutlet]"="modal.layout")
