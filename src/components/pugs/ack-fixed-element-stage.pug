ng-container(
  *ngFor="let fixedElm of AckApp.fixedElms"
)
  ng-container(*ngTemplateOutlet="fixedElm.content")

ng-container(
  *ngFor="let prompt of AckApp.prompts.prompts;let i=index"
)
  ack-modal-layout(
    zIndex = "99"
    "[allowClose]" = "0"
  )
    div(style="text-align:left;max-width:900px;border:1px solid #DDD;border-radius:5px;margin:1em;padding:1em;background-color:white;")
      h3(*ngIf="prompt.title" style="margin-top:0;") {{ prompt.title }}
      
      div(style="padding-right:1em;")
        |{{ prompt.message }}
      
      br
      br
      div(style="text-align:right;")
        -btnStyle = "text-align:center;display:inline-block;min-width:75px;border-radius:3px;border:1px solid #AAA;padding:0 .5em;";
        a(
          *ngIf     = "prompt.type=='confirm'"
          "(click)" = "prompt.emitter.emit(false)"
          style     = btnStyle + "margin-right:.5em;"
        ) Cancel

        a(
          "(click)" = "prompt.emitter.emit(true)"
          style     = btnStyle
          "[ngStyle]" = "{'font-weight':prompt.type=='confirm' ? 'bold' : null}"
        ) OK


ng-container(
  *ngFor="let item of AckApp.modals"
)
  ng-container(*ngIf="!item.isModelMode || item.showModel")
    ng-template(
      "[ngTemplateOutlet]" = "item.layout"
    )
